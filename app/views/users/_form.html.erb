<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :user_type, 'Type' %>
    <%= f.select :user_type, ['Farm', 'Table'], include_blank: true %>
  </p>

  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>

<% end %>
