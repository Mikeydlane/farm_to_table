<div class="new_product_header"><h3>Add Product</h3></div>

<%= form_for @product do |f| %>
  <p>
    <%= f.text_field :name, placeholder: "Name" %>
  </p>

  <p>
    <%= f.number_field :price, placeholder: "Price" %>
  </p>

  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>

<% end %>
