<h3>My Products</h3>
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.description.truncate(200) %></td>
      <td><%= number_to_currency product.price %></td>
      <td><%= button_to 'Delete', product, method: :delete, class: 'btn btn-danger btn-sm' %></td>
      <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning btn-sm' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
