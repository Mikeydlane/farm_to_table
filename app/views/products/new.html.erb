<%= form_for @product do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.label :image, 'Image URL' %>
    <%= f.text_field :image %>
  </p>

  <%= f.submit %>

<% end %>
